<h1 class="text-center">Welcome to The General Store</h1>
<br>
<br>

<div class="container col-md-8">

<% @items.each do |item| %>

<div class="media">
  <div class="media-left .pull-left">
    <!-- <a><%= image_tag item.image_path %> -->
    <%= image_tag item.image_path, :class => "media-object"%>
    <!-- </a> -->
  </div>
  <div class="media-body .pull-right">
    <h3 class="media-heading"><%= item.title %></h3>
    <div><%= item.description %></div>
    <div>$<%= item.price %></div>
  </div>
</div>
  <% end %>

</div>
