<% if @cart.nil? %>
  No current items
  <% else %>

    Cart items:
    <br>
    <% @items.each do |item| %>
      Title: <%= item.title %>
      <br>
      Description: <%= item.description %>
      <br>
      Price: <%= item.price %>
      <br>
      Weight:<%= item.weight %>
      <br>
    <% end %>

    <% total_price = @items.reduce(0) do |sum, item| %>
      <% sum + item.price %>
    <% end %>
    <% total_weight = @items.reduce(0) do |sum, item| %>
      <% sum + item.weight %>
    <% end %>
      <br>
      Price Total: <%= total_price %>
        <br>
      Weight Total: <%= total_weight %>
        <br>
<% end %>
